.a__main-content
  .a__main-content__message
    .message{data: {message: {id: message.id}}}
      .a__main-content__message__upper-info
        .a__main-content__message__upper-info__talker
          = message.user.name
        .a__main-content__message__upper-info__date
          = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
      .a__main-content__message__text
        - if message.content.present?
          %p.main-chat__main-content__message__text__content
          = message.content
        = image_tag message.image.url, class: 'main-chat__main-content__message__text__image' if message.image.present?
